@model ContactUsModel

<form asp-controller="Mail" asp-action="ProcessForm" role="form" class="frm-show-form frm_pro_form" id="form_contact-form" enctype="multipart/form-data" method="post">
    <div class="frm_form_fields">
        <fieldset>
            <legend class="frm_screen_reader">Contact Us</legend>

            <div class="frm_fields_container">
                <input type="hidden" name="frm_action" value="create" />
                <input type="hidden" name="form_id" value="9" />
                <input type="hidden" name="frm_hide_fields_9" id="frm_hide_fields_9" value="" />
                <input type="hidden" name="form_key" value="contact-form" />
                <input type="hidden" name="item_meta[0]" value="" />
                <input type="hidden" id="frm_submit_entry_9" name="frm_submit_entry_9" value="cf54b51604" />
                <input type="hidden" name="_wp_http_referer" value="/" />

                <label class="frm_screen_reader frm_hidden">If you are human, leave this field blank.</label>
                <input class="frm_hidden frm_verify" id="frm_verify_9" name="frm_verify" value="" />

                <div id="frm_field_94_container" class="frm_form_field form-field  frm_required_field frm_top_container frm_first frm_third">
                    <label asp-for="NameC" class="frm_primary_label">Name <span class="frm_required"></span></label>
                    <input asp-for="NameC" class="form-control" placeholder="Name" required />
                    <span asp-validation-for="NameC" class="text-danger"></span>
                </div>

                <div id="frm_field_96_container" class="frm_form_field form-field  frm_required_field frm_top_container frm_third">
                    <label asp-for="EmailC" class="frm_primary_label">Email <span class="frm_required"></span></label>
                    <input asp-for="EmailC" type="email" class="form-control" placeholder="Email" required />
                    <span asp-validation-for="EmailC" class="text-danger"></span>
                </div>

                <div id="frm_field_99_container" class="frm_form_field form-field  frm_top_container frm_third">
                    <label asp-for="PhoneC" class="frm_primary_label">Phone <span class="frm_required"></span></label>
                    <input asp-for="PhoneC" class="form-control" placeholder="Phone" />
                    <span asp-validation-for="PhoneC" class="text-danger"></span>
                </div>

                <div id="frm_field_98_container" class="frm_form_field form-field  frm_required_field frm_top_container frm_full">
                    <label asp-for="CityC" class="frm_primary_label">City <span class="frm_required"></span></label>
                    <select asp-for="CityC" class="form-control" required>
                        <option value="">-- Select City --</option>
                        @foreach (var cityName in ViewData["TownName"] as List<string>)
                        {
                            <option value="@cityName">@cityName</option>
                        }
                    </select>
                    <span asp-validation-for="CityC" class="text-danger"></span>
                </div>

                <div id="frm_field_98_container" class="frm_form_field form-field  frm_required_field frm_top_container frm_full">
                    <label asp-for="MessageC" class="frm_primary_label">Message <span class="frm_required"></span></label>
                    <textarea asp-for="MessageC" class="form-control" rows="5" placeholder="Message" required style="resize: none;"></textarea>
                    <span asp-validation-for="MessageC" class="text-danger"></span>
                </div>

                <div class="frm_submit">
                    <button type="submit" class="frm_button_submit frm_final_submit">Submit</button>
                </div>
            </div>
        </fieldset>
    </div>
</form>
